proc renamer(string $input){
	 list selection
sel[]  
loop through sel[]
	$i = 1 --> format to match num of digits
	 concatenate strings adding incrementing number (such as    "hello " + $name)
	 rename selection
}


global proc string Selection() {
    string $sels[];
    $sels = `ls -selection`; 
}



global proc renamer(int $number, string $split){

	string $sels[];
    $sels = `ls -selection`; 


	string $nams[];
		tokenize $split "_" $nams[];
		$nams [1] = $number;
		
	string $new = $nams[0] + "_" + $nams [1] + "_" + $nams[2];
	return $new;



}
